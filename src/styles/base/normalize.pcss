*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: inherit;
}

h1, h2, h3, h4, h5, h6 {
  line-height: 1;
}

a {
  color: inherit;
  text-decoration: none;
}

img {
  width: 100%;
}

li {
  list-style: none;
}

button {
  background: transparent;
  font-family: inherit;
  font-size: inherit;
  color: inherit;
  border: none;
  cursor: pointer;
}

input {
  font-family: inherit;
  font-size: inherit;
}